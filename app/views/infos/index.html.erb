    <section class="log_in">
        <div class="cont2">
            <form action="/infos" method="post"  class="login_form">
                <label>More information</label>
                <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>" required>
                <div>
                    <input type="text" name="info[name]" placeholder="First name"required>
                    <input type="text" name="info[family_name]" placeholder="last name"required>    
                </div>
                <div id="date">
                    <input type="date" name="info[date]" placeholder="CNE"required>
                    <span>M :</span>
                    <input type="radio" name="info[gender]" value="Male">
                    <span>F :</span>
                    <input type="radio" name="info[gender]" value="Female">
                </div>            
                <div>
                <input type="text" name="info[address]" placeholder="address" required>
                <select name="info[city]" required>  
                    <option value="" disabl hidden>City</option>
                    <option value="Agadir">Agadir</option>
                    <option value="boulman">Boulman</option>
                    <option value="chfchawn">Chfchawn</option>
                    <option value="Dakhla">Dakhla</option>
                    <option value="Fes">Fes</option>
                    <option value="Ifram">Ifran</option>
                    <option value="Laayoune">Laayoune </option>
                    <option value="Galmim">Galmim</option>
                </select>
                <select name="info[country]" required>
                    <option value="" disabl hidden>Country</option>
                    <option value="Morocco">Morocco</option>
                    <option value="Algeria">Algeria</option>
                    <option value="Egypt">Egypt</option>
                    <option value="France">France</option>
                    <option value="United States of America">United States of America</option>
                    <option value="United Kingdom">United Kingdom</option>
                </select>
                </div>
                <div>
                <select name="info[class_c]" required>
                    <option value="" disabl hidden>Class</option>
                    <option value="GI">GI</option>
                    <option value="GC">GC</option>
                    <option value="TM">TM</option>
                    <option value="MDM">MDM</option>
                    <option value="LT">LT</option>
                    <option value="GRH">GRH</option>
                </select>
                <select name="info[year]" required>
                    <option value="" disabl hidden>Level</option>
                    <option value="s1">S1</option>
                    <option value="s2">S2</option>
                    <option value="s3">S3</option>
                    <option value="s4">S4</option>
                    <option value="s5">S5</option>
                    <option value="s6">S6</option>
                    <option value="s7">S7 </option>
                    <option value="s8">S8</option>
                </select>    
                </div>
                <input type="submit" name="submit" value="regester" class="submit">
            </form>
            <div class="icon">
                <div class="img">
                    <%= image_tag("icon.png",:width=>"240px") %>
                </div>
                <label>Join the caravan, your are one of us now</label>
